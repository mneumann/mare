:actor Main
  :new (env)
    ExampleStdIn.new(env)

:actor ExampleStdIn
  :is StdIn.Actor
  :let env Env
  :let io StdIn.Engine
  :new (@env)
    @io = StdIn.Engine.new(@)
    StdIn.Ticket.get(@env.root.ticket_issuer, @)

  :fun ref _io_react(action IO.Action)
    @env.out.print(Inspect[action])
    if (action == IO.Action.Closed) (
      @env.out.write(@io.read_stream.extract_all.as_string)
    )
    @
